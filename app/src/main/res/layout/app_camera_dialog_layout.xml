<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/rlt_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_15adp"
            android:layout_marginTop="@dimen/_5adp"
            >

        <com.rideke.user.common.custompalette.FontTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/iv_close"
                android:gravity="start"
                android:text="@string/select_photo"
                android:textColor="@color/app_primary_text"
                android:textSize="@dimen/_16asp"
                app:fontName="@string/font_Medium"
                />

        <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                />
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlt_header"
            android:layout_marginStart="@dimen/_20adp"
            android:layout_marginEnd="@dimen/_20adp"
            android:layout_marginTop="@dimen/_10adp"
            >

        <LinearLayout
                android:id="@+id/llt_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20adp"
                android:layout_marginEnd="@dimen/_20adp"

                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/app_curve_button_yellow"
                android:padding="10dp">

            <com.rideke.user.common.custompalette.FontTextView
                    app:fontName="@string/font_Medium"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_10adp"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:text="@string/camera"
                    android:textColor="@color/app_primary_button_text_color"
                    android:textSize="@dimen/_14asp" />

        </LinearLayout>
        <LinearLayout
                android:id="@+id/llt_library"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20adp"
                android:layout_marginEnd="@dimen/_20adp"
                android:layout_marginTop="@dimen/_20adp"
                android:layout_below="@+id/llt_camera"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/app_curve_button_yellow"
                android:padding="10dp">

            <com.rideke.user.common.custompalette.FontTextView
                    app:fontName="@string/font_Medium"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_10adp"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:text="@string/camera_roll"
                    android:textColor="@color/app_primary_button_text_color"
                    android:textSize="@dimen/_14asp" />

        </LinearLayout>
        <LinearLayout
                android:id="@+id/llt_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20adp"
                android:layout_marginEnd="@dimen/_20adp"
                android:layout_marginTop="@dimen/_20adp"
                android:layout_below="@+id/llt_library"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/app_curve_button_yellow_with_outline"
                android:padding="10dp"
                android:layout_marginBottom="@dimen/_20adp">

            <com.rideke.user.common.custompalette.FontTextView
                    app:fontName="@string/font_Medium"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_10adp"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textColor="@color/app_primary_text"
                    android:textSize="@dimen/_14asp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>