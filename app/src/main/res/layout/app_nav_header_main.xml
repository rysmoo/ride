<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profilelayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_180adp"
    android:orientation="vertical"
    android:paddingTop="@dimen/_20adp"
    android:background="@color/app_primary_color"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/_15adp"
        android:layout_marginTop="@dimen/_20adp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="@dimen/_95adp"
            android:layout_height="@dimen/_95adp"
            app:cardElevation="@dimen/_5adp"
            android:layout_margin="@dimen/_5adp"
            app:cardBackgroundColor="@color/app_primary_disable"
            app:cardCornerRadius="@dimen/_50adp">

            <ImageView
                android:id="@+id/profile_image1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"/>
        </androidx.cardview.widget.CardView>


        <com.rideke.user.common.custompalette.FontTextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15adp"
            android:layout_toEndOf="@+id/card_view"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingStart="@dimen/_16adp"
            android:paddingEnd="@dimen/_16adp"
            android:text="@string/hello"
            android:textColor="@color/white"
            android:textSize="@dimen/_16asp"
            app:fontName="@string/font_Medium" />

        <com.rideke.user.common.custompalette.FontTextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_10adp"
            android:layout_toEndOf="@+id/card_view"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingStart="@dimen/_16adp"
            android:paddingEnd="@dimen/_16adp"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="@dimen/_16asp"
            app:fontName="@string/font_Medium" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="android.studio@android.com"
            android:visibility="gone" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/app_primary_color" />
</LinearLayout>
